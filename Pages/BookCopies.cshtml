@page
@model BookCopiesModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create Book Copy Record</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="bookcpy.FK_Book"></label>

                <select asp-for="bookcpy.FK_Book" class="form-control">
                    @foreach (var selectitem in @Model.bookcpy.sliListBooks)
                    {
                        <option value="@selectitem.Value">@selectitem.Text</option>
                    }
                </select>

                <span asp-validation-for="bookcpy.FK_Book" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="bookcpy.FK_Library"></label>

                <select asp-for="bookcpy.FK_Library" class="form-control">
                        @foreach (var selectitem in @Model.bookcpy.sliListLibraries)
                        {
                            <option value="@selectitem.Value">@selectitem.Text</option>
                        }
                    </select>

                <span asp-validation-for="bookcpy.FK_Library" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="bookcpy.NumberOfCopies" class="control-label"></label>
                <input asp-for="bookcpy.NumberOfCopies" class="form-control" />
                <span asp-validation-for="bookcpy.NumberOfCopies" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="BookCopiesIndex">Back to List</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
